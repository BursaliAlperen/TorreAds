RewriteEngine On

# Health check endpoint
RewriteRule ^health$ - [L]

# API endpoints
RewriteRule ^api/(.*)$ index.php?api=$1 [QSA,L]

# Bot webhook
RewriteRule ^webhook/(.*)$ index.php?webhook=$1 [QSA,L]

# Main bot endpoint
RewriteRule ^$ index.php [L]

# Tüm istekleri index.php'ye yönlendir (Render için gerekli)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^(.*)$ index.php [L,QSA]
